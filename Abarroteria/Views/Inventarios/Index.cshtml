@model IEnumerable<Abarroteria.DataBase.Inventario>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <h2><i class="fa fa-bars"></i> Inventarios</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("Create", "Inventarios")" class="btn btn-outline-info btn-sm" title="Registrar Nuevo">
                        <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                        Registrar Nuevo
                    </a>

                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Codigo Bodega
                        </th>
                        <th>
                            Nombre Bodega
                        </th>
                        <th>
                            Producto
                        </th>
                        <th>
                            Disponible
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bodega.Codigo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bodega.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Productos.descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Disponible)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

