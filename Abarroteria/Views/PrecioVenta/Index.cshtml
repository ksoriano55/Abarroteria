@model IEnumerable<Abarroteria.DataBase.PrecioVenta>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>PRECIOS VENTA</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a href="@Url.Action("Create", "PrecioVenta")" class="btn btn-outline-info btn-sm" title="Registrar Nuevo">
                        <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                        Registrar Nuevo
                    </a>
                </li>
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Producto
                        </th>
                        <th>
                            Lista Precios
                        </th>
                        <th>
                            Precio
                        </th>
                        <th>
                            Fecha Desde
                        </th>
                        <th>
                            Fecha Hasta
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Productos.descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ListaPrecio1.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaDesde)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaHasta)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

